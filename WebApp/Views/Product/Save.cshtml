@model Domain.Entity.Product

@{
    ViewData["Title"] = "Produtos";
}

<h2>Formulário de Produtos</h2>

<form class="form-horizontal" asp-action="Save" asp-controller="Product" method="POST">
    
    <input type="hidden" class="form-control" asp-for="Id" />
    <div class="form-group">
        <label class="col-md-1 control-label" for="Name">Nome</label>
        <div class="col-md-2">
            <input type="text" class="form-control" asp-for="Name" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-1 control-label" for="Name">Categoria</label>
        <div class="col-md-2">
            <select class="form-control" asp-for="CategoryId"
                asp-items='@(new SelectList(@ViewBag.Categories, "Id", "Name"))'>
            </select>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            <button class="btn btn-success">Salvar</button>
        </div>
    </div>
</form>