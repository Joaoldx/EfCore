@model IEnumerable<Domain.Entity.Category>

@{
    ViewData["Title"] = "Categorias";
}
<h2>Todas as Categorias</h2>

<a  href="/Category/Saver" class="btn">Nova Categoria</a>

<div class="row">
    <div class="col-md- 12">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Nome</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>
                            <a href="/Category/Edit/@item.Id" class="btn">Editar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

